<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Calculadora">

    <TextView
        android:background="#B6B6B6"
        android:id="@+id/Resultado"
        android:layout_weight="1"
        android:layout_marginBottom="2dp"
        android:paddingBottom="12dp"
        android:paddingRight="12dp"
        android:gravity="right|bottom"
        android:text="0"
        android:textSize="50sp"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <LinearLayout
        android:background="#B6B6B6"
        android:layout_width="match_parent"
        android:layout_weight="0.7"
        android:layout_height="wrap_content">

        <Button

            android:backgroundTint="#E8C411"
            app:cornerRadius="20dp"
            android:id="@+id/borrar"
            android:layout_margin="2dp"
            android:text="CE"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <Button
            android:id="@+id/prueba1"
            android:backgroundTint="#535252"
            app:cornerRadius="20dp"
            android:layout_margin="2dp"
            android:text="-"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <Button
            android:id="@+id/prueba2"
            android:backgroundTint="#535252"
            app:cornerRadius="20dp"
            android:layout_margin="2dp"
            android:text="-"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <Button
            android:backgroundTint="#535252"
            app:cornerRadius="20dp"
            android:id="@+id/div"
            android:layout_margin="2dp"
            android:text="/"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

    </LinearLayout>

    <LinearLayout
        android:background="#B6B6B6"
        android:layout_width="match_parent"
        android:layout_weight="0.7"
        android:layout_height="wrap_content">


        <Button
            android:backgroundTint="#535252"
            app:cornerRadius="20dp"
            android:id="@+id/btn7"
            android:layout_margin="2dp"
            android:text="7"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <Button
            android:backgroundTint="#535252"
            app:cornerRadius="20dp"
            android:id="@+id/btn8"
            android:layout_margin="2dp"
            android:text="8"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <Button
            android:backgroundTint="#535252"
            app:cornerRadius="20dp"
            android:id="@+id/btn9"
            android:layout_margin="2dp"
            android:text="9"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <Button
            android:backgroundTint="#535252"
            app:cornerRadius="20dp"
            android:id="@+id/por"
            android:layout_margin="2dp"
            android:text="x"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

    </LinearLayout>

    <LinearLayout
        android:background="#B6B6B6"
        android:layout_width="match_parent"
        android:layout_weight="0.7"
        android:layout_height="wrap_content">

        <Button
            android:backgroundTint="#535252"
            app:cornerRadius="20dp"
            android:id="@+id/btn4"
            android:layout_margin="2dp"
            android:text="4"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <Button
            android:backgroundTint="#535252"
            app:cornerRadius="20dp"
            android:id="@+id/btn5"
            android:layout_margin="2dp"
            android:text="5"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <Button
            android:backgroundTint="#535252"
            app:cornerRadius="20dp"
            android:id="@+id/btn6"
            android:layout_margin="2dp"
            android:text="6"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <Button
            android:backgroundTint="#535252"
            app:cornerRadius="20dp"
            android:id="@+id/menos"
            android:layout_margin="2dp"
            android:text="-"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

    </LinearLayout>

    <LinearLayout
        android:background="#B6B6B6"
        android:layout_width="match_parent"
        android:layout_weight="0.7"
        android:layout_height="wrap_content">

        <Button
            android:backgroundTint="#535252"
            app:cornerRadius="20dp"
            android:id="@+id/btn1"
            android:layout_margin="2dp"
            android:text="1"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <Button
            android:backgroundTint="#535252"
            app:cornerRadius="20dp"
            android:id="@+id/btn2"
            android:layout_margin="2dp"
            android:text="2"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <Button
            android:backgroundTint="#535252"
            app:cornerRadius="20dp"
            android:id="@+id/btn3"
            android:layout_margin="2dp"
            android:text="3"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <Button
            android:backgroundTint="#535252"
            app:cornerRadius="20dp"
            android:id="@+id/mas"
            android:layout_margin="2dp"
            android:text="+"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

    </LinearLayout>

    <LinearLayout
        android:background="#B6B6B6"
        android:layout_width="match_parent"
        android:layout_weight="0.7"
        android:layout_height="wrap_content">

        <Button
            android:backgroundTint="#535252"
            app:cornerRadius="20dp"
            android:layout_margin="2dp"
            android:text="+/-"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <Button
            android:backgroundTint="#535252"
            app:cornerRadius="20dp"
            android:id="@+id/btn0"
            android:layout_margin="2dp"
            android:text="0"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <Button
            android:backgroundTint="#535252"
            app:cornerRadius="20dp"
            android:id="@+id/punto"
            android:layout_margin="2dp"
            android:text="."
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <Button
            android:backgroundTint="#393939"
            app:cornerRadius="20dp"
            android:id="@+id/igual"
            android:layout_margin="2dp"
            android:text="="
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

    </LinearLayout>



</LinearLayout>